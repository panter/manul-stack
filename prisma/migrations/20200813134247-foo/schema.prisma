datasource db {
    provider = "sqlite"
    url = "***"
}

generator prisma_client {
    provider = "prisma-client-js"
}

model BlogPost {
    id          String  @default(uuid()) @id
    title       String
    description String
    user        User    @relation(fields: [userId], references: [id])
    userId      String
    published   Boolean @default(false)
}

model UserRole {
    id    String @id
    users User[]
}

model User {
    id        String     @default(uuid()) @id
    email     String     @unique
    password  String
    blogPosts BlogPost[]
    roles     UserRole[]
}
