datasource db {
    provider = "postgresql"
    url = "***"
}

generator prisma_client {
    provider = "prisma-client-js"
}

model BlogPost {
    id          Int     @default(autoincrement()) @id
    title       String
    description String
    user        User    @relation(fields: [userId], references: [id])
    userId      String
    published   Boolean @default(false)
}

model User {
    id        String     @default(uuid()) @id
    email     String     @unique
    password  String
    blogPosts BlogPost[]
}
